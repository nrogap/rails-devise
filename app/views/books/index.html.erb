<h1 class="title">Books</h1>
<%= link_to 'New Book', new_book_path, class: "button is-primary is-outlined" %>
<table class="table" style="width: 100%;">
  <tr>
    <th>Title</th>
    <th colspan="3"></th>
  </tr>

  <% @books.each do |book| %>
    <tr>
      <td><%= book.title %></td>
      <td><%= link_to 'Show', book_path(book) %></td>
      <td><%= link_to 'Edit', edit_book_path(book) %></td>
      <td><%= link_to 'Destroy',
              book_path(book),
              method: :delete,
              data: { confirm: 'Are you sure?' } %>
      </td>
    </tr>
  <% end %>
</table>